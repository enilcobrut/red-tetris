    "react": "^18",
    "react-dom": "^18",
    "sanitize-html": "^2.13.0",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.7.5"
  },
  "devDependencies": {
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "jest": "^27.0.6"
  }
}
